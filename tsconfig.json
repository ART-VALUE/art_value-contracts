{
    "compilerOptions": {
        "lib": ["ES2018", "DOM"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "target": "ES2018",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "./dist/",
        "paths": {
            "@contract-json/*": ["./gen/contracts/*"],
            "@contract/*": ["./gen/types/*"]
        }
    },
    "include": ["./src/**/*.ts", "./gen/types/**/*.ts"],
    "exclude": ["./src/test-old/**/*.ts", "./src/migrations-old/**/*.ts"]
}
  